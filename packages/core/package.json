{
  "name": "@jt-view-exports-svg/core",
  "version": "1.0.0",
  "type": "module",
  "description": "Core types, enums and utilities for JT View Exports SVG",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./constants": {
      "import": "./dist/constants/index.js",
      "types": "./dist/constants/index.d.ts"
    },
    "./types": {
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "npm-run-all clean build:enums copy:types",
    "build:enums": "tsc",
    "copy:types": "cp -r src/types dist/",
    "clean": "rimraf dist",
    "watch": "tsc --watch",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^22.0.0"
  }
}
