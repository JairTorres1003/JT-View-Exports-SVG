---
import ShortcutComponent, { type ShortcutProps } from '../core/components/Shortcut'

interface Props extends ShortcutProps {}

const { className, ...props }: Props = Astro.props
---

<ShortcutComponent {...props} client:load className={`Shortcut ${className ?? ''}`}>
  <slot />
</ShortcutComponent>

<style>
  .Shortcut {
    margin: 0;
    border-radius: 0.25rem;
    font-family: var(--__sl-font);
    font-size: var(--sl-text-2xs);
    gap: 0.25em;
    padding-inline: 0.375rem;
    background-color: var(--sl-color-gray-6);
    padding-top: 0;
    padding-bottom: 0;
    color: var(--sl-color-text);
  }

  .Shortcut :global(abbr) {
    margin-top: 0;
    margin-bottom: 0;
  }
</style>
