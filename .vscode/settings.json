{
  "search.exclude": {
    "out": true,
    "**/.docusaurus": true
  },
  "typescript.tsc.autoDetect": "off",
  "cSpell.language": "en,es-ES",
  "cSpell.ignoreWords": ["Jair", "arrowParens", "ecmaVersion", "esnext", "mpath", "quasis"],
  "cSpell.ignorePaths": [
    "package-lock.json",
    "node_modules",
    "vscode-extension",
    ".git/objects",
    ".vscode",
    ".vscode-insiders",
    ".github",
    "**/tsconfig.json"
  ],
  "biome.enabled": true,
  "prettier.enable": false,
  "eslint.enable": false,
  "deno.enable": true,
  "deno.config": "./server/deno.json",
  "deno.enablePaths": ["server"],
  "workbench.tree.enableStickyScroll": true,
  "editor.defaultFormatter": "biomejs.biome",
  "editor.detectIndentation": true,
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.fontLigatures": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit",
    "source.organizeImports.biome": "explicit"
  },
  "editor.cursorBlinking": "expand",
  "editor.linkedEditing": true,
  "editor.guides.bracketPairs": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.tsx": "${capture}.tsx",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb, .*",
    "package.nls.json": "package.nls*.json"
  },
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "terminal.integrated.profiles.osx": {
    "bash": null,
    "zsh": {
      "path": "/bin/zsh",
      "icon": "terminal-bash",
      "color": "terminal.ansiGreen"
    }
  },
  "files.readonlyInclude": {
    ".lintstagedrc": true,
    "tsconfig.json": true,
    ".husky/**": true,
    ".vscode/settings.json": true,
    ".vscode/extensions.json": true
  },
  "json.schemas": [
    {
      "fileMatch": ["/l10n/bundle.l10n*.json"],
      "url": "./schemas/l10n.schema.json"
    },
    {
      "fileMatch": ["/package.nls*.json"],
      "url": "./schemas/nls.schema.json"
    },
    {
      "fileMatch": ["client/src/i18n/locales/*.json"],
      "url": "./client/i18n.schema.json"
    },
    {
      "fileMatch": ["client/src/assets/vs/userConfiguration/keybindings.json"],
      "url": "vscode://schemas/keybindings"
    }
  ],
  "material-icon-theme.files.associations": {
    "i18n.schema.json": "i18n",
    "l10n.schema.json": "i18n",
    "nls.schema.json": "i18n",
    "tsconfig.types.json": "tsconfig"
  },
  "material-icon-theme.folders.associations": {
    "workers": "gh-workflows",
    "vs": "vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  }
}
