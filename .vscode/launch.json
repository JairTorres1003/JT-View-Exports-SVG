{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}/packages/extension"],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"]
    },
    {
      "name": "Run Web Extension",
      "type": "pwa-extensionHost",
      "debugWebWorkerHost": true,
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/extension",
        "--extensionDevelopmentKind=web"
      ],
      "outFiles": ["${workspaceFolder}/dist/web/**/*.js"]
    },
    {
      "name": "Extension Tests",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/extension",
        "--extensionTestsPath=${workspaceFolder}/dist/test/suite/index",
        "${workspaceFolder}/packages/extension/workspaceTest.code-workspace"
      ],
      "outFiles": ["${workspaceFolder}/dist/test/**/*.js"],
      "preLaunchTask": "TaskTest"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Deno Program",
      "program": "${workspaceFolder}/server/src/server.ts",
      "cwd": "${workspaceFolder}/server",
      "env": {},
      "runtimeExecutable": "/Users/jairalexandretorrescaviedes/.deno/bin/deno",
      "runtimeArgs": ["run", "-A", "--unstable-sloppy-imports", "--inspect-wait"],
      "attachSimplePort": 9229
    }
  ]
}
