{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/src/server.ts",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--inspect",
        "--watch",
        "--allow-net",
        "--allow-read",
        "--allow-env",
        "--allow-import",
        "--unstable-sloppy-imports"
      ],
      "attachSimplePort": 9229
    }
  ]
}
